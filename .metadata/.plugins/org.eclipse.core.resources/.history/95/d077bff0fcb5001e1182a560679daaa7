# DataSource configuration
spring.datasource.url=jdbc:mysql://localhost:3306/supercoin
spring.datasource.username=root
spring.datasource.password=rohit
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Hibernate configuration
spring.jpa.hibernate.ddl-auto=update

# Show SQL statements in the console (optional)
spring.jpa.show-sql=false

# Logging configuration
# Set the logging level for Spring to INFO
logging.level.org.springframework=INFO

# Set the logging level for Hibernate to INFO
logging.level.org.hibernate=INFO

# Set the logging level for your application's packages (adjust package names accordingly)
logging.level.com.supercoin=INFO

server.port=2224
